    "requirements": "GPA > 3.5, Active in organizations"
}

@scholarshipId = {{createScholarship.response.body.data.id}}

### ==================================================================================
### 6. TABLE: SCHOLARSHIP_APPLICATIONS
### ==================================================================================

### 6.1 Apply for Scholarship (Multipart)
POST {{baseUrl}}/scholarships/{{scholarshipId}}/apply
Authorization: Bearer {{studentToken}}
Content-Type: multipart/form-data; boundary={{multipartBoundary}}
Accept: {{acceptHeader}}

--{{multipartBoundary}}
Content-Disposition: form-data; name="motivation_letter"; filename="letter.txt"
Content-Type: text/plain

I am highly motivated to join this program because...
--{{multipartBoundary}}
Content-Disposition: form-data; name="cv_path"; filename="cv.pdf"
Content-Type: application/pdf

[PDF CONTENT SIMULATION]
--{{multipartBoundary}}
Content-Disposition: form-data; name="transcript_path"; filename="transcript.pdf"
Content-Type: application/pdf

[PDF CONTENT SIMULATION]
--{{multipartBoundary}}--

